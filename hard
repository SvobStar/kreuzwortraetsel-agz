<h3>Waagrecht</h3>
<ul>
<li id="a1">1. Nationaler Gedenktag vom 21. Juni (Thema in Brugg: Cricket).</li>
<li id="a2">2. Vorname des Präsidenten des Aargau Cricket Club.</li>
<li id="a3">3. Kostenlose Zeitung für Pendler.</li>
</ul>
<h3>Senkrecht</h3>
<ul>
<li id="d1">1. Neues Steuermodell, das die Heiratsstrafe abschaffen soll.</li>
<li id="d2">2. Schweizer Ausdruck für Autonummernschild.</li>
<li id="d3">3. Das höchste Gericht der Schweiz.</li>
</ul>
<button id="check">Lösung prüfen</button>
<script>
const acrossClues = {"1": [[9,3],[9,4],[9,5],[9,6],[9,7],[9,8],[9,9],[9,10],[9,11],[9,12],[9,13],[9,14],[9,15],[9,16],[9,17]],"2": [[16,10],[16,11],[16,12],[16,13],[16,14]],"3": [[19,2],[19,3],[19,4],[19,5],[19,6],[19,7],[19,8],[19,9],[19,10],[19,11],[19,12],[19,13],[19,14],[19,15]]};
const downClues = {"1": [[0,4],[1,4],[2,4],[3,4],[4,4],[5,4],[6,4],[7,4],[8,4],[9,4],[10,4],[11,4],[12,4],[13,4],[14,4],[15,4],[16,4],[17,4],[18,4],[19,4],[20,4]],"2": [[3,10],[4,10],[5,10],[6,10],[7,10],[8,10],[9,10],[10,10],[11,10],[12,10],[13,10],[14,10],[15,10],[16,10]],"3": [[3,17],[4,17],[5,17],[6,17],[7,17],[8,17],[9,17],[10,17],[11,17],[12,17],[13,17],[14,17],[15,17]]};
const cellToClue = {};
for (const num in acrossClues) {
    acrossClues[num].forEach(coord => {
        const key = coord[0] + '-' + coord[1];
        if (!cellToClue[key]) cellToClue[key] = {};
        cellToClue[key].across = num;
    });
}
for (const num in downClues) {
    downClues[num].forEach(coord => {
        const key = coord[0] + '-' + coord[1];
        if (!cellToClue[key]) cellToClue[key] = {};
        cellToClue[key].down = num;
    });
}
function clearHighlights() {
    document.querySelectorAll('.cell').forEach(cell => cell.classList.remove('highlight'));
    document.querySelectorAll('li').forEach(li => li.classList.remove('highlight'));
}
document.querySelectorAll('.cell').forEach(cell => {
    cell.addEventListener('focus', () => {
        clearHighlights();
        const r = cell.getAttribute('data-row');
        const c = cell.getAttribute('data-col');
        const key = r + '-' + c;
        const clueRefs = cellToClue[key] || {};
        if (clueRefs.across) {
            const num = clueRefs.across;
            acrossClues[num].forEach(([rr, cc]) => {
                document.querySelector(`.cell[data-row='${rr}'][data-col='${cc}']`).classList.add('highlight');
            });
            document.getElementById('a' + num).classList.add('highlight');
        }
        if (clueRefs.down) {
            const num = clueRefs.down;
            downClues[num].forEach(([rr, cc]) => {
                document.querySelector(`.cell[data-row='${rr}'][data-col='${cc}']`).classList.add('highlight');
            });
            document.getElementById('d' + num).classList.add('highlight');
        }
    });
});
document.getElementById('check').addEventListener('click', () => {
    document.querySelectorAll('.cell').forEach(cell => cell.classList.remove('correct', 'wrong'));
    document.querySelectorAll('.cell').forEach(cell => {
        const sol = cell.getAttribute('data-solution').toUpperCase();
        const val = cell.value.toUpperCase();
        if (!val) return;
        if (val === sol) {
            cell.classList.add('correct');
        } else {
            cell.classList.add('wrong');
        }
    });
});
</script>
</body>
